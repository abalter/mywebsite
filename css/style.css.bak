html {
  --dark-color: #55552b;
  background: #77777;
}
h1, h2 {
  font-family: Bitter, sans-serif;
  font-weight: bolder;
  padding; 0;
  margin: 0;
  color: var(--dark-color);
  text-transform: uppercase;
}
h1 {
  margin: 0em 0 0.25em 0;
  font-size: 1.6em;
}
h2 {
  margin: 1em 0 0.1em 0;
  font-size: 1.4em;
}
body {
  height: 100vw;
  width: 100vw;
  font-family: Lato, sans-serif;
  overflow-wrap: normal;
  font-size: 16px;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-content: stretch;
}
#left-sidebar {
  flex-basis: 240px;
  flex-grow: 1;
  flex-shrink: 0;
  padding: 1em 1em;
}
#main {
  flex-basis: 360px;
  flex-grow: 2;
  flex-shrink: 0; 
  padding: 1em 1em;
  background: white;
}
#right-sidebar {
  flex-grow: 1;
  flex-shrink: 1;
  padding: 1em 1em;
  background: pink;
}
#left-sidebar img {
  width: 100%;
}
.section {
  width: 100vw;
  padding: 1em;
  max-width: 800px;
  margin: 0 auto 0 auto;
  /*background: #ababab;*/
}
ul {
  margin: 0;
  list-style-position: outside;
  padding-left: 1em;
}
li {
  margin: 0.3em 0;
  text-indent: 0em;
}
hr {
  display: block;
  height: 0px;
  border: 0;
  border-top: 0.15em solid var(--dark-color);
  margin: 0.1em 0;
  padding: 0; 
}
#contact {
  margin: 0;
  padding: 0;
  font-size: 1em;
  font-weight: 400;
}
a {
  text-decoration: underline;
  color: inherit;
}
a:hover {
  color: var(--dark-color);
  font-weight: 900;
}
p {
  margin: 0;
  padding-left: 0em;
}
@media (min-width: 680px) {
  .section {
    width: 680px;
  }
}
@media (max-width: 599px){
  #left {
    flex-grow: 1;
  }
}
